<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import octillect.styles.Palette?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<JFXDrawer xmlns="http://javafx.com/javafx/"
           xmlns:fx="http://javafx.com/fxml/"
           fx:controller="octillect.controllers.LeftDrawerController"
           fx:id="leftDrawer"
           stylesheets="@/octillect/styles/Palette.css"
           direction="LEFT"
           defaultDrawerSize="320">

    <fx:define>
        <Palette fx:id="Palette"/>
    </fx:define>

    <sidePane>

        <VBox style="-fx-background-color: -o-dark-700;">

            <padding>
                <Insets topRightBottomLeft="16"/>
            </padding>
            <BorderPane prefWidth="${leftDrawer.defaultDrawerSize}">

                <left>
                    <Label text="Projects" textFill="${Palette.DARK_300}">
                        <font>
                            <Font name="Product Sans Regular" size="16"/>
                        </font>
                    </Label>
                </left>

                <right>
                    <FontIcon fx:id="addNewProjectIcon"
                              iconLiteral="gmi-add-circle"
                              iconSize="18"
                              iconColor="${Palette.PRIMARY}"
                              onMouseClicked="#handleAddNewProjectIconMouseClicked"/>
                </right>

            </BorderPane>

            <ListView fx:id="userProjectsListView"
                      onMouseClicked="#handleUserProjectsListViewMouseClicked"/>

        </VBox>

    </sidePane>

</JFXDrawer>